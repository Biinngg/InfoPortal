<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignLeft="@+id/book_author"
    android:layout_below="@+id/book_author"
    android:padding="8dip">
    <TextView 
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:textStyle="bold"
        android:textSize="14dip"/>
    <TextView 
        android:id="@+id/book_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_title"
        android:textSize="14dip"/>
    <LinearLayout
        android:layout_width="520dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_num"
        android:orientation="horizontal">
    <TextView 
        android:id="@+id/book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:maxWidth="260dip"
        android:textSize="12dip"/>
    <TextView 
        android:id="@+id/book_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dip"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/book_total_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/book_total"
        android:layout_alignTop="@id/book_num"
        android:text="@string/book_total"
        android:textSize="14dip"/>
    <TextView 
        android:id="@+id/book_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/book_num"
        android:textSize="14dip"/>
    <TextView 
        android:id="@+id/book_left_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/book_left"
        android:layout_below="@id/book_total"
        android:text="@string/book_left"
        android:textSize="14dip"/>
    <TextView 
        android:id="@+id/book_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/book_total"
        android:textSize="14dip"/>
</RelativeLayout>