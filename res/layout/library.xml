<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/body_background"
    android:orientation="vertical" >

  	 <!-- Header -->
  	 <include layout="@layout/header_search"/>
  	 
	<TextView
		android:id="@+id/library_time_title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/lib_time_title"
	    android:padding="3dip"
	    android:background="#65999999"
	    android:textColor="@color/status_text"
	/>
	 <ListView
	    android:id="@+id/library_time_list"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:layout_weight="1" 
 	    android:cacheColorHint="#00000000"
	    android:fadeScrollbars="true"
    	android:divider="@drawable/dashed_line"
    	android:dividerHeight="1dip"
    	android:fastScrollEnabled="true"
	/>
	 
	<TextView
		android:id="@+id/library_borrow_title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/lib_borrow_title"
	    android:padding="3dip"
	    android:background="#65999999"
	    android:textColor="@color/status_text"
	/>
	 <ListView
	    android:id="@+id/library_borrow_list"
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent"
	  	android:layout_weight="1" 
 	    android:cacheColorHint="#00000000"
	    android:fadeScrollbars="true"
    	android:divider="@drawable/dashed_line"
    	android:dividerHeight="1dip"
    	android:fastScrollEnabled="true"
	/>

</LinearLayout>
