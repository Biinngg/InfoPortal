<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/room_result1"
    android:padding="8dip" >

    <TextView
        android:id="@+id/room_result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/room_result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/room_result1"
        android:layout_toRightOf="@+id/room_result1" />

    <TextView
        android:id="@+id/room_result3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/room_result2"
        android:layout_toRightOf="@+id/room_result2" />

    <TextView
        android:id="@+id/room_result4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/room_result3"
        android:layout_toRightOf="@+id/room_result3" />

    <TextView
        android:id="@+id/room_result5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/room_result4"
        android:layout_toRightOf="@+id/room_result4" />

</RelativeLayout>